            android:padding="10dp"
            android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
        </shape>
    </item>
    <item
        android:top="3dp"
        android:bottom="6dp"
        android:left="4dp"
        android:right="4dp">
