<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pressure_item"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/user_item_custom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/take_care"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:src="@mipmap/take_care_icon"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="left"
        android:text=""
        android:layout_below="@+id/take_care"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/id_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/date"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/date"
        android:layout_toRightOf="@id/date"
        android:fontFamily="@font/roboto_regular"
        android:gravity="right"
        android:text=""
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/heart_beat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:text=""
        android:textColor="#130f40" />

    <TextView
        android:id="@+id/min_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heart_beat"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:text=""
        android:textColor="#130f40" />

    <TextView
        android:id="@+id/max_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/min_pressure"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_regular"
        android:text=""
        android:textColor="#130f40" />
</RelativeLayout>