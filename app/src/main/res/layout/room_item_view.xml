<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/room_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_item_custom"
    android:orientation="vertical"
    android:padding="@dimen/p_20">

    <LinearLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/room_name"
            android:layout_width="@dimen/w_200"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/m_30"
            android:layout_marginLeft="@dimen/m_30"
            android:fontFamily="@font/roboto_regular"
            android:gravity="left"
            android:text=""
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/room_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="@dimen/m_20"
            android:layout_marginLeft="@dimen/m_20"
            android:fontFamily="@font/roboto_regular"
            android:text=""
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:visibility="gone"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/w_40"
            android:layout_height="@dimen/w_40"
            android:layout_marginStart="@dimen/m_20"
            android:layout_marginLeft="@dimen/m_20"
            android:background="@mipmap/btn_delete" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/w_35"
            android:layout_height="@dimen/h_35"
            android:layout_marginStart="@dimen/m_10"
            android:layout_marginLeft="@dimen/m_10"
            android:layout_marginTop="@dimen/m_5"
            android:layout_toEndOf="@id/btn_delete"
            android:layout_toRightOf="@id/btn_delete"
            android:background="@mipmap/btn_cancel" />
    </RelativeLayout>

</FrameLayout>
