<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dff9fb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dff9fb"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/m_30"
                android:layout_height="@dimen/h_30"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/m_20"
                android:layout_marginLeft="@dimen/m_20"
                android:src="@mipmap/name_icon" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="250dp"
                android:layout_height="@dimen/h_50"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/m_20"
                android:background="@drawable/et_custom"
                android:gravity="center"
                android:iconifiedByDefault="false"
                android:queryHint="@string/search_by_name">

                <requestFocus />
            </androidx.appcompat.widget.SearchView>

        </LinearLayout>

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_20"
            android:layout_marginTop="@dimen/m_5"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/mesage_delete_user"
            android:textSize="@dimen/txt_s_15" />

        <ListView
            android:id="@+id/list_users"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_0"
            android:layout_weight="1"
            android:background="@drawable/user_item_custom"
            android:listSelector="@drawable/list_selector"
            android:scrollbars="none" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_ground"
            android:orientation="vertical">

            <!-- Header -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_header_height"
                android:background="@color/colorPrimary"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/p_10"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:id="@+id/activity_main_imv_avatar"
                    android:layout_width="@dimen/w_80"
                    android:layout_height="@dimen/h_80"
                    android:contentDescription="@string/todo"
                    android:paddingTop="@dimen/p_10"
                    app:srcCompat="@mipmap/blood_pressure_icon_vector" />

                <TextView
                    android:id="@+id/activity_main_tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/author_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/activity_main_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_email"
                    android:textSize="@dimen/txt_s_10"
                    tools:ignore="SmallSp" />

            </LinearLayout>
            <!-- Item home -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_item_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/navigation_item_icon_size"
                    android:layout_height="@dimen/navigation_item_icon_size"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/home_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_32"
                    android:layout_marginLeft="@dimen/m_32"
                    android:text="@string/home" />
            </LinearLayout>
            <!-- Item Info -->
            <LinearLayout
                android:id="@+id/nav_basic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_item_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/navigation_item_icon_size"
                    android:layout_height="@dimen/navigation_item_icon_size"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/about_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_32"
                    android:layout_marginLeft="@dimen/m_32"
                    android:text="@string/basic_detail" />
            </LinearLayout>
            <!-- Item message -->

            <LinearLayout
                android:id="@+id/nav_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_item_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/navigation_item_icon_size"
                    android:layout_height="@dimen/navigation_item_icon_size"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/message_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_32"
                    android:layout_marginLeft="@dimen/m_32"
                    android:text="@string/my_message" />
            </LinearLayout>


            <!-- Item news -->
            <LinearLayout
                android:id="@+id/nav_news"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_item_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/navigation_item_icon_size"
                    android:layout_height="@dimen/navigation_item_icon_size"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/news_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_32"
                    android:layout_marginLeft="@dimen/m_32"
                    android:text="@string/news_item" />
            </LinearLayout>

            <!-- Item room -->
            <LinearLayout
                android:id="@+id/nav_room"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_item_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/navigation_item_icon_size"
                    android:layout_height="@dimen/navigation_item_icon_size"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/room_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_32"
                    android:layout_marginLeft="@dimen/m_32"
                    android:text="@string/room_item" />
            </LinearLayout>

            <!-- Item analyst -->
            <LinearLayout
                android:id="@+id/nav_analyst"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_item_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/navigation_item_icon_size"
                    android:layout_height="@dimen/navigation_item_icon_size"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/analyst_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_32"
                    android:layout_marginLeft="@dimen/m_32"
                    android:text="@string/analyst_item" />
            </LinearLayout>

            <!-- Item export -->
            <LinearLayout
                android:id="@+id/nav_export"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_item_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/navigation_item_icon_size"
                    android:layout_height="@dimen/navigation_item_icon_size"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/export_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_32"
                    android:layout_marginLeft="@dimen/m_32"
                    android:text="@string/export" />

            </LinearLayout>

            <!-- Item logout -->
            <LinearLayout
                android:id="@+id/nav_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_item_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/navigation_item_icon_size"
                    android:layout_height="@dimen/navigation_item_icon_size"
                    android:contentDescription="@string/todo"
                    android:src="@mipmap/logout_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_32"
                    android:layout_marginLeft="@dimen/m_32"
                    android:text="@string/logout" />
            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>