<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dff9fb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".controllers.EditUserActivity">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/indigo_daisy"
            android:text="@string/app_name"
            android:textSize="50sp" />

        <TextView

            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/m_20"
            android:layout_marginLeft="@dimen/m_20"
            android:text=""
            android:textColor="@android:color/holo_red_light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_id_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/user_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50"
                    android:layout_marginLeft="@dimen/m_20"
                    android:layout_marginRight="@dimen/m_20"
                    android:layout_marginBottom="@dimen/m_10"
                    android:autofillHints="@string/user_id"
                    android:background="@drawable/et_custom"
                    android:enabled="false"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/user_id"
                    android:inputType="text"
                    android:maxLength="9"
                    android:padding="@dimen/p_10"
                    android:textSize="@dimen/txt_s_15" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50"
                    android:layout_marginLeft="@dimen/m_20"
                    android:layout_marginRight="@dimen/m_20"
                    android:layout_marginBottom="@dimen/m_10"
                    android:autofillHints="@string/username"
                    android:background="@drawable/et_custom"
                    android:enabled="false"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="@dimen/p_10"
                    android:textSize="@dimen/txt_s_15" />

                <EditText
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50"
                    android:layout_marginLeft="@dimen/m_20"
                    android:layout_marginRight="@dimen/m_20"
                    android:layout_marginBottom="@dimen/m_10"
                    android:autofillHints="@string/full_name"
                    android:background="@drawable/et_custom"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/full_name"
                    android:inputType="textPersonName"
                    android:maxLength="45"
                    android:padding="@dimen/p_10"
                    android:textSize="@dimen/txt_s_15" />

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50"
                    android:layout_marginLeft="@dimen/m_20"
                    android:layout_marginRight="@dimen/m_20"
                    android:layout_marginBottom="@dimen/m_10"
                    android:autofillHints="@string/age"
                    android:background="@drawable/et_custom"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/age"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="@dimen/p_10"
                    android:textSize="@dimen/txt_s_15" />

                <EditText
                    android:id="@+id/disease_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50"
                    android:layout_marginLeft="@dimen/m_20"
                    android:layout_marginRight="@dimen/m_20"
                    android:layout_marginBottom="@dimen/m_10"
                    android:autofillHints=""
                    android:background="@drawable/et_custom"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/disease_name"
                    android:inputType="text"
                    android:maxLength="45"
                    android:padding="@dimen/p_10"
                    android:textSize="@dimen/txt_s_15" />

                <EditText
                    android:id="@+id/tel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50"
                    android:layout_marginLeft="@dimen/m_20"
                    android:layout_marginRight="@dimen/m_20"
                    android:layout_marginBottom="@dimen/m_10"
                    android:autofillHints="@string/tel"
                    android:background="@drawable/et_custom"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/tel"
                    android:inputType="phone"
                    android:padding="@dimen/p_10"
                    android:textSize="@dimen/txt_s_15" />

                <TextView
                    android:id="@+id/room"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50"
                    android:layout_marginLeft="@dimen/m_20"
                    android:layout_marginRight="@dimen/m_20"
                    android:layout_marginBottom="@dimen/m_10"
                    android:background="@drawable/et_custom"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/room"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="@dimen/p_10"
                    android:textSize="@dimen/txt_s_15"
                    tools:ignore="TextViewEdits" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/m_20"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="@dimen/m_20"
                    android:layout_marginBottom="@dimen/m_10"
                    android:background="@drawable/btn_custom"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/btn_save"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_s_25"
                    android:textStyle="bold"
                    tools:ignore="OnClick" />
            </LinearLayout>
        </ScrollView>
<!--        <include-->
<!--            android:id="@+id/tool_bar4"-->
<!--            layout="@layout/toolbar_layout" />-->
    </LinearLayout>

    <include
        android:id="@+id/nav_view"
        layout="@layout/navigation_layout" />
</androidx.drawerlayout.widget.DrawerLayout>