<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/user_item_custom"
    android:maxWidth="@dimen/max_w_400"
    android:minWidth="@dimen/min_w_200"
    android:orientation="horizontal"
    android:padding="@dimen/p_20">

    <LinearLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/min_w_200"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/w_40"
            android:layout_height="@dimen/h_40"
            android:layout_marginStart="@dimen/m_20"
            android:layout_marginLeft="@dimen/m_20"
            android:background="@mipmap/btn_delete" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/w_35"
            android:layout_height="@dimen/h_35"
            android:layout_marginStart="@dimen/m_10"
            android:layout_marginLeft="@dimen/m_10"
            android:layout_marginTop="@dimen/m_5"
            android:layout_toEndOf="@id/btn_delete"
            android:layout_toRightOf="@id/btn_delete"
            android:background="@mipmap/btn_cancel" />
    </RelativeLayout>

</FrameLayout>